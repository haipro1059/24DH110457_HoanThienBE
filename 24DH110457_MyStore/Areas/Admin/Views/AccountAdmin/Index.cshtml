
@model IEnumerable<_24DH110457_MyStore.Models.Customer>

@{
    ViewBag.Title = "Quản lý Tài khoản Khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-primary mb-4">QUẢN LÝ TÀI KHOẢN KHÁCH HÀNG</h2>

<div class="card p-3 shadow-sm">
    @* Có thể thêm chức năng Tìm kiếm/Lọc/Phân trang ở đây nếu cần, tương tự như Products/Orders *@

    <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th style="width: 5%;">ID</th>
                <th style="width: 15%;">Tên đăng nhập</th>
                <th style="width: 20%;">Họ tên</th>
                <th style="width: 20%;">Email</th>
                <th style="width: 15%;">Điện thoại</th>
                <th style="width: 15%;">Địa chỉ</th>
                <th style="width: 10%;">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
               foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CustomerID</td>
                        <td>@item.Username</td>
                        <td>@item.CustomerName</td>
                        <td>@item.CustomerEmail</td>
                        <td>@item.CustomerPhone</td>
                        <td>@item.CustomerAddress</td>
                        <td>
                            @* Nút Chỉnh sửa *@
                            @Html.ActionLink("Sửa", "Edit", new { id = item.CustomerID }, new { @class = "btn btn-sm btn-warning" })

                            @* Nút Xóa *@
                            @Html.ActionLink("Xóa", "Delete", new { id = item.CustomerID }, new { @class = "btn btn-sm btn-danger mt-1" })
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center text-muted">Không có tài khoản khách hàng nào được tìm thấy.</td>
                </tr>
            }
        </tbody>
    </table>
</div>