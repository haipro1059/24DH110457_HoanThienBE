@model PagedList.IPagedList<_24DH110457_MyStore.Models.Order>
@using PagedList.Mvc;
@using System.Globalization;

@{
    ViewBag.Title = "Danh sách Đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-success mb-4 border-bottom pb-2">DANH SÁCH ĐƠN HÀNG</h2>

@* ======================================================== *@
@* 🎯 PHẦN TÌM KIẾM VÀ LỌC (Filtering) *@
@* ======================================================== *@
@using (Html.BeginForm("Index", "Order", FormMethod.Get, new { @class = "mb-4", @role = "search", @area = "Admin" }))
{
    <div class="row align-items-end p-3 border rounded shadow-sm bg-light">

        @* Tên khách hàng *@
        <div class="col-md-3 mb-3">
            <label class="form-label small">Tên khách hàng</label>
            @Html.TextBox("searchName", ViewBag.CurrentName as string, new { @class = "form-control", placeholder = "Nhập tên khách hàng" })
        </div>

        @* Trạng thái thanh toán *@
        <div class="col-md-3 mb-3">
            <label class="form-label small">Trạng thái thanh toán</label>
            @Html.DropDownList("searchStatus", ViewBag.PaymentStatusList as SelectList, new { @class = "form-select" })
        </div>

        @* Ngày đặt hàng *@
        <div class="col-md-3 mb-3">
            <label class="form-label small">Ngày đặt hàng</label>
            @Html.TextBox("searchDate", "", new { @class = "form-control", type = "date", placeholder = "mm/dd/yyyy" })
            @* Lưu ý: Thêm JavaScript để đảm bảo định dạng ngày tháng nếu cần *@
        </div>

        @* Nút Tìm kiếm *@
        <div class="col-md-3 mb-3">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-search me-1"></i> Tìm kiếm
            </button>
        </div>
    </div>
}

@* ======================================================== *@
@* 🎯 PHẦN DANH SÁCH VÀ KẾT QUẢ *@
@* ======================================================== *@

@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning text-center mt-4">
        KHÔNG CÓ đơn hàng nào phù hợp với kết quả tìm kiếm.
    </div>
}
else
{
    <p class="text-muted small">Hiển thị @Model.Count trên @Model.TotalItemCount đơn hàng.</p>

    <table class="table table-bordered table-hover text-center align-middle mt-2">
        <thead class="table-success">
            <tr>
                <th>Ngày đặt hàng</th>
                <th>Tên khách hàng</th>
                <th>Tổng giá trị</th>
                <th>Trạng thái thanh toán</th>
                <th>Phương thức giao hàng</th>
                <th>Chi tiết</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@(item.Customer?.CustomerName ?? "Khách hàng (N/A)")</td>
                    <td>@item.TotalAmount.ToString("N0") ₫</td>
                    <td>@item.PaymentStatus</td>
                    <td>@item.ShippingMethod</td>
                    <td>
                        @Html.ActionLink("Chi tiết đơn hàng", "Details", "Order", new { id = item.OrderID, area = "Admin" }, new { @class = "btn btn-sm btn-info" })
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @* PHÂN TRANG *@
    <div class="d-flex justify-content-center mt-3">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, searchName = ViewBag.CurrentName, searchStatus = ViewBag.CurrentStatus }))
    </div>
}