@model IEnumerable<_24DH110457_MyStore.Models.Product>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="@item.ProductImage"
                         class="card-img-top" style="height:180px; object-fit:cover;" alt="@item.ProductName"
                         onerror="this.onerror=null;this.src='@Url.Content("~/Content/images/default.png")';" />
                    <div class="card-body">
                        <h5 class="card-title">@item.ProductName</h5>
                        <p class="text-danger fw-bold">@item.ProductPrice.ToString("N0") ₫</p>
                        <p class="text-muted">@item.ProductDescription</p>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="text-center text-muted">Không có sản phẩm nào để hiển thị.</p>
}

