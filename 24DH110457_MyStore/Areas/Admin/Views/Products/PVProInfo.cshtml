@model _24DH110457_MyStore.Models.ViewModel.ProductSearchVM

@if (Model.Products != null && Model.Products.Any())
{
    <h2 class="bg-success text-center p-2 text-white">DANH SÁCH SẢN PHẨM</h2>

    <table class="table table-bordered table-striped text-center">
        <thead class="bg-success text-white">
            <tr>
                <th>Tên sản phẩm</th>
                <th>Hình ảnh</th>
                <th>Đơn giá</th>
                <th>Danh mục</th>
                <th>Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>
                        <img src="@Url.Content("~/Content/images/" + product.ProductImage)"
                             style="max-height:80px; border-radius:5px;" />
                    </td>
                    <td>@product.ProductPrice</td>
                    <td>@product.Category.CategoryName</td>
                    <td>
                        @Html.ActionLink("Sửa", "Edit", new { id = product.ProductID }, new { @class = "btn btn-primary btn-sm" })
                        @Html.ActionLink("Chi tiết", "Details", new { id = product.ProductID }, new { @class = "btn btn-info btn-sm" })
                        @Html.ActionLink("Xóa", "Delete", new { id = product.ProductID }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-danger text-center mt-4">Không tìm thấy sản phẩm nào phù hợp.</p>
}

<div class="text-center mt-3">
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-success" })
</div>
