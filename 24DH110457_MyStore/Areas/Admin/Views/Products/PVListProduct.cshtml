@model IEnumerable<_24DH110457_MyStore.Models.Customer>

@{
    ViewBag.Title = "Danh sách khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-center mt-3 mb-4">Danh sách khách hàng</h2>

<table class="table table-bordered table-hover text-center">
    <thead class="table-dark">
        <tr>
            <th>Mã KH</th>
            <th>Tên khách hàng</th>
            <th>Số điện thoại</th>
            <th>Email</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.CustomerID</td>
                    <td>@item.CustomerName</td>
                    <td>@item.CustomerPhone</td>
                    <td>@item.CustomerEmail</td>
                    <td>
                        <a href="@Url.Action("Details", "Customer", new { id = item.CustomerID })" class="btn btn-info btn-sm">
                            Chi tiết
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-danger">Không có khách hàng nào.</td>
            </tr>
        }
    </tbody>
</table>
