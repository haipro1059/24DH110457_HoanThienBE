@model _24DH110457_MyStore.Models.Product

<head>
    <style>
        textarea {
            width: 100%;
            height: 150px;
            padding: 12px 5px;
            box-sizing: border-box;
            border: 1px solid #d9d0d0;
            border-radius: 10px;
            background-color: whitesmoke;
            resize: none;
        }
    </style>
</head>

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <!-- Danh mục -->
    <div class="form-group">
        <div class="control-label col-md-2">Danh mục</div>
        <div class="col-md-10">
            @Html.DropDownList("CategoryID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })
        </div>
    </div>

    <!-- Tên sản phẩm -->
    <div class="form-group">
        <div class="control-label col-md-2">Tên sản phẩm</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.ProductName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ProductName, "", new { @class = "text-danger" })
        </div>
    </div>

    <!-- Mô tả -->
    <div class="form-group">
        <div class="control-label col-md-2">Mô tả</div>
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.ProductDescription, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ProductDescription, "", new { @class = "text-danger" })
        </div>
    </div>

    <!-- Đơn giá -->
    <div class="form-group">
        <div class="control-label col-md-2">Đơn giá</div>
        <div class="col-md-10">
            <input name="ProductPrice" class="form-control" type="number" step="0.01"
                   value="@(Model?.ProductPrice.ToString("0.##"))" />
            @Html.ValidationMessageFor(model => model.ProductPrice, "", new { @class = "text-danger" })
        </div>
    </div>

    <!-- Hình ảnh -->
    <div class="form-group">
        <div class="control-label col-md-2">Hình ảnh</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.ProductImage, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ProductImage, "", new { @class = "text-danger" })
        </div>
    </div>

    <!-- Nút Lưu và Quay lại -->
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">Lưu</button>
            <a href="/Admin/Products" class="btn btn-secondary">Quay lại danh sách</a>
        </div>
    </div>
</div>
