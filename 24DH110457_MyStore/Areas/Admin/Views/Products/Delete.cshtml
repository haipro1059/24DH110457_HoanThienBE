@model _24DH110457_MyStore.Models.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="bg-success p-2">XÓA SẢN PHẨM</h2>

<h3 class="text-danger p-2">
    Bạn có chắc chắn muốn xóa sản phẩm này không?
</h3>

<div class="container-fluid">
    <dl class="dl-horizontal">
        <dt>Tên sản phẩm</dt>
        <dd>@Html.DisplayFor(model => model.ProductName)</dd>

        <dt>Mô tả</dt>
        <dd>@Html.DisplayFor(model => model.ProductDescription)</dd>

        <dt>Đơn giá</dt>
        <dd>@Html.DisplayFor(model => model.ProductPrice)</dd>

        <dt>Hình ảnh</dt>
        <dd>
            @if (!string.IsNullOrEmpty(Model.ProductImage))
            {
                <img src="@Url.Content(Model.ProductImage.StartsWith("http")
                                        ? Model.ProductImage
                                        : "~/Content/images/" + Model.ProductImage)"
                     alt="@Model.ProductName" style="max-width:300px; height:auto;" />
            }
            else
            {
                <span>Chưa có ảnh</span>
            }
        </dd>

        <dt>Danh mục</dt>
        <dd>@Html.DisplayFor(m => m.Category.CategoryName)</dd>
    </dl>

    @* **Form POST xóa sản phẩm** *@
    @using (Html.BeginForm("DeleteConfirmed", "Products", new { area = "Admin" }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("id", Model.ProductID) @* phải đặt tên "id" để MVC bind với tham số DeleteConfirmed(int id) *@

        <button type="submit" class="btn btn-danger">Xóa sản phẩm</button>
        @Html.ActionLink("Quay lại danh sách", "Index", new { area = "Admin" }, new { @class = "btn btn-primary" })
    }
</div>
