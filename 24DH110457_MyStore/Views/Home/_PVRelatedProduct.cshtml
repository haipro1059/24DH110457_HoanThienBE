@model IEnumerable<_24DH110457_MyStore.Models.Product>

@if (Model != null && Model.Any())
{
    <h4 class="mt-4">Sản phẩm tương tự</h4>
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100 shadow-sm text-center">
                    <a href="@Url.Action("ProductDetail", "Home", new { id = product.ProductID })">
                        <img src="@product.ProductImage" alt="@product.ProductName" class="card-img-top" style="height: 150px; object-fit: contain;">
                    </a>
                    <div class="card-body">
                        <h6 class="card-title">@product.ProductName</h6>
                        <p class="text-danger fw-bold">
                            @product.ProductPrice.ToString("N0") ₫
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
}
