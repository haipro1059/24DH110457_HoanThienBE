@model _24DH110457_MyStore.Models.ViewModel.ChangePasswordVM

@{
    ViewBag.Title = "Đổi mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center text-primary mb-4">ĐỔI MẬT KHẨU</h2>
<div class="row justify-content-center">
    <div class="col-md-6">
        @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(false, "Vui lòng kiểm tra lại các lỗi sau:", new { @class = "text-danger mb-3" })

            @* Mật khẩu cũ *@
            <div class="form-group mb-3">
                @Html.LabelFor(m => m.OldPassword, new { @class = "control-label" })
                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-danger" })
            </div>

            @* Mật khẩu mới *@
            <div class="form-group mb-3">
                @Html.LabelFor(m => m.NewPassword, new { @class = "control-label" })
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
            </div>

            @* Xác nhận mật khẩu mới *@
            <div class="form-group mb-3">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-warning px-4">Đổi mật khẩu</button>
                @Html.ActionLink("Quay lại", "ProfileInfo", "Account", null, new { @class = "btn btn-outline-secondary ms-2" })
            </div>
        }
    </div>
</div>